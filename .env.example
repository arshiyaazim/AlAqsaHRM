# Database configuration
DATABASE_URL=sqlite:///instance/attendance.db

# Default credentials - CHANGE THESE AFTER DEPLOYMENT!
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-strong-password
ADMIN_EMAIL=admin@example.com
ADMIN_ROLE=admin

HR_USERNAME=hr001
HR_PASSWORD=your-strong-password
HR_EMAIL=hr@example.com
HR_ROLE=hr

VIEWER_USERNAME=view001
VIEWER_PASSWORD=your-strong-password
VIEWER_EMAIL=viewer@example.com
VIEWER_ROLE=viewer

# Application secret key (generate a strong key for production)
# You can generate a secure key using: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secure-secret-key-here

# Google Maps API key - Get yours at https://console.cloud.google.com/
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Flask settings
FLASK_APP=app.py
FLASK_ENV=production  # Use 'development' for development mode

# Default company settings
COMPANY_NAME=Your Company Name
COMPANY_TAGLINE=Your Company Tagline
COMPANY_LOGO=static/images/logo.png

# Session configuration
SESSION_COOKIE_SECURE=true  # Set to false if not using HTTPS
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax
SESSION_TIMEOUT=86400 # 24 hours in seconds